[Unit]
Description=My Python App
After=network.target

[Service]
User=root
WorkingDirectory=/opt/my-python-app/backend
# ExecStart now points to uvicorn within the virtual environment
ExecStart=/opt/my-python-app/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target